<div class="col-xs-6 col-md-3">
  <div class="thumbnail">
    <%= link_to image_tag(gallery.pic), gallery, target: "_blank" %>
    <div class="caption">
      <h4 class="text-center">
        <%= link_to '#', title: "share" do%>
         <i class="glyphicon glyphicon-share"></i>
         <% end %> <%= gallery.name %>
      </h4>
      <p class="text-right by">by <%= link_to gallery.user.username, gallery.user %>

     </p>

    </div>
  </div>
</div>
