<div class="col-xs-6 col-md-3">
  <div class="thumbnail">
    <%= link_to image_tag(photo.url), photo %>
    <div class="caption">

      <h4 class="text-center">
        <%= link_to '#', title: "share" do%>
         <i class="glyphicon glyphicon-share"></i>
         <% end %> <%= photo.name %>
      </h4>
      <hr>
      <p><%= simple_format photo.caption %></p>
    </div>
  </div>
</div>
